<% if user_signed_in? %>
<div class="action-sheet">
  <div class="row">
    <div class="col-xs-6">
      <% if (params[:controller] == "profile" && params[:action] == "show") || params[:controller] == "subordinates/expenses"%>
      <% if current_user.is_manager || current_user.top_manager %>
        <%= link_to "Reporting", subordinates_expenses_path, class: "btn btn-default btn-lg button-transform" %>
      <% end %>
      <% end %>
    </div>
    <% if current_user.is_manager || current_user.top_manager %>
      <div class="col-xs-6">
    <% else %>
      <div class="col-xs-12">
    <% end %>
      <%= link_to 'Add', new_expense_path, class: "btn btn-success btn-lg button-transform"%>
    </div>
  </div>
</div>
<% end %>


<%= content_for(:after_js) do %>
 <script>
   $('.button-transform').bind('touchstart', function() {
         $(this).addClass('hover_effect');
   });

   $('.button-transform').bind('touchend', function() {
           $(this).removeClass('hover_effect');
   });
 </script>
<% end %>
