<div class="yield-box">
  <div class="text-center">
  <h2>Forgot your password?</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>


<article class="awesome-article">
    <div class="login-box">
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: 'E-mail', label: false, class: "login-style" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Reset password ", class: "btn-danger" %>
      </div>
    </div>
    <% end %>
</article>

  <article class="second-box text-center">
    <%= render "devise/shared/links" %>
  </div>
  </article>

</div>
