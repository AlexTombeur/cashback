<div class="yield-box">
  <div class="container">
    <h4 id="h3_show">Details of your expense</h4>
    <div class="text-center">
      <i class="fa fa-<%= set_form_icon(@expense.category) %> fa-3x cat-icon"></i>
    </div>
    <div class="well table expense-show" id="expense_show">
      <%= link_to edit_expense_path do %>
      <div class="row">
        <div class="col-xs-6">
          <label>Sub category</label>
          <p>
            <%= @expense.sub_category %>
          </p>
        </div>
        <div class="col-xs-6 text-right">
          <span class="label label-<%= @expense.status %> pull-right">
            <%= @expense.status %>
          </span>

          <h1><%= @expense.amount %> â‚¬</h1>
        </div>
      </div>
      <label>Date</label>
      <p><%= @expense.date %></p>

      <% if @expense.title %>
        <p><%= @expense.title %></p>
      <% end %>
      <% if @expense.description %>
        <label>Description</label>
        <p>
          <%= @expense.description %>
        </p>
      <% end %>
      <% end %>
    </div>

    <div class="action-sheet">
      <div class="row">
        <div class="col-xs-6">
          <%= link_to "Back", profile_path, class: "btn back-btn btn-primary btn-lg button-transform" %>
        </div>
        <div class="col-xs-6">
          <%= link_to "Delete", expense_path(@expense), method: :delete, class: "btn delete-btn btn-danger btn-lg button-transform" %>
        </div>
      </div>
    </div>

  </div>
</div>
